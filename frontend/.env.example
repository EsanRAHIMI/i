# Frontend Service Environment Configuration

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key

# Google OAuth (Public)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=133652045****content.com

# Application Settings
NEXT_PUBLIC_APP_NAME="i Agent"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_INTERFACE=true
NEXT_PUBLIC_ENABLE_DIGITAL_AVATAR=true
NEXT_PUBLIC_ENABLE_FEDERATED_LEARNING=true

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Development
NODE_ENV=development
PORT=3000